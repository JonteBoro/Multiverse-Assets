#usda 1.0
(
    defaultPrim = "top_shell"
    upAxis = "Z"
)

def Material "top_shell"
{
    token inputs:frame:stPrimvarName = "st"
    token outputs:surface.connect = </top_shell/PBRShader.outputs:surface>

    def Shader "PBRShader"
    {
        uniform token info:id = "UsdPreviewSurface"
        color3f inputs:diffuseColor.connect = </top_shell/DiffuseTexture.outputs:rgb>
        int inputs:useSpecularWorkflow = 1
        token outputs:surface
    }

    def Shader "PrimvarReader"
    {
        uniform token info:id = "UsdPrimvarReader_float2"
        token inputs:varname.connect = </top_shell.inputs:frame:stPrimvarName>
        float2 outputs:result
    }

    def Shader "DiffuseTexture"
    {
        uniform token info:id = "UsdUVTexture"
        asset inputs:file = @../../textures/top_shell.png@
        float2 inputs:st.connect = </top_shell/PrimvarReader.outputs:result>
        float3 outputs:rgb
    }
}

